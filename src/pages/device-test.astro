---
import BaseLayout from '../layouts/BaseLayout.astro';
import DeviceMock from '../components/DeviceMock';
import GraphPaper from '../components/GraphPaper';
import { getImage } from 'astro:assets';
import mountainsHero from '../assets/mountains-hero.jpg';

const optimizedImage = await getImage({
  src: mountainsHero,
  width: 1000,
  height: 700,
  format: 'webp',
  quality: 85
});
---

<BaseLayout title="Device Mock Test">
  <div style="position: relative; width: 100%; height: 100vh; display: grid; place-items: center;">
    <GraphPaper client:load />
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
      <DeviceMock client:load imageSrc={optimizedImage.src} />
    </div>
  </div>
</BaseLayout>

<style>
  /* Optional: Add some perspective for a more 3D feel */
  div {
    perspective: 1000px;
  }
</style>
