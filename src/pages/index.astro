---
import BaseLayout from '../layouts/BaseLayout.astro';
import { FeaturedPost } from '../components/FeaturedPost';

const placeholder = `Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do 
eiusmod tempor incididunt`;
---

<BaseLayout>
  <main>
    <div class="header">
      <h1>hughsername</h1>
      <p class="placeholder-text">
        {placeholder}
      </p>
    </div>
    <div class="image-container">
      <FeaturedPost 
        src="/mountains.png"
        alt="Mountain landscape with snow-capped peaks"
        category="LATEST BLOG"
        title="The Future of Web Development"
        description={placeholder}
        href="/blog/future-of-web-dev"
        client:load 
      />
      <FeaturedPost 
        src="/mountains.png"
        alt="Mountain landscape with snow-capped peaks"
        category="OPINION"
        title="Building with Solid.js"
        description={placeholder}
        href="/blog/building-with-solidjs"
        client:load 
      />
      <FeaturedPost 
        src="/mountains.png"
        alt="Mountain landscape with snow-capped peaks"
        category="OPINION"
        title="Modern CSS Techniques"
        description={placeholder}
        href="/blog/modern-css"
        client:load 
      />
    </div>
  </main>
</BaseLayout>

<style>
  main {
    position: relative;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .header {
    max-width: 420px;
    margin-bottom: 2rem;
    padding: 24px 28px;
  }

  .image-container {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: var(--space-7);
    padding-bottom: var(--space-7);
  }
</style>
