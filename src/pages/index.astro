---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation';
---

<BaseLayout title="Hugh Dillon">
  <div class="layout">
    <main>
      <h1>hughsername</h1>
      {/* Content will go here */}
    </main>
    <Navigation client:load />
  </div>
</BaseLayout>

<style>
  .layout {
    position: fixed;
    inset: 0;
    width: 100%;
    height: 100vh;
    height: -webkit-fill-available;
    display: grid;
    /* Content first, then nav */
    grid-template-columns: minmax(0, 1fr) 76px;
  }

  main {
    grid-column: 1;
    padding: 24px 0 24px 28px;
    height: 100%;
    overflow-y: auto;
    min-width: 0; /* Prevent content from pushing grid */
  }

  /* Desktop layout */
  @media (min-width: 768px) {
    .layout {
      grid-template-columns: 1fr;
      grid-template-rows: 76px 1fr;
    }

    main {
      grid-row: 2;
      padding: 24px 28px;
    }
  }
</style>
